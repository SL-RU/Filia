<Window x:Class="Filia.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filia.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="394"/>
        <Button x:Name="button" Content="send" HorizontalAlignment="Left" Margin="394,-2,0,0" VerticalAlignment="Top" Width="47" Click="button_Click" Height="25"/>
        <ScrollViewer Margin="0,23,0,0">
            <TextBlock x:Name="textBlock" TextWrapping="Wrap"/>
        </ScrollViewer>
        <Button x:Name="getinfo" Content="get info" HorizontalAlignment="Left" Margin="441,-2,0,0" VerticalAlignment="Top" Width="66" Height="25" Click="getinfo_Click"/>

    </Grid>
</Window>
