<Window x:Class="Filia.Client.Users.PasswordChanger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filia.Client.Users"
        mc:Ignorable="d"
        Title="PasswordChanger" Height="130" Width="386.842">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <PasswordBox x:Name="passwordBox" Grid.Row="1" VerticalAlignment="Center" Grid.Column="1"/>
        <TextBlock Margin="0" TextWrapping="Wrap" Text="Nickname" VerticalAlignment="Center"/>
        <TextBlock x:Name="nickname" Margin="0" TextWrapping="Wrap" Grid.Column="1" VerticalAlignment="Center"/>
        <TextBlock TextWrapping="Wrap" Text="Password" VerticalAlignment="Center" Grid.Row="1"/>
        <Button x:Name="Ok" Content="Ok" Margin="0" Grid.Row="2" Width="75"/>
        <Button x:Name="canc" Content="Cancel" Grid.Column="1" Margin="0" Grid.Row="2"/>

    </Grid>
</Window>
